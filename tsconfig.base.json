{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@coinage-app/data": ["libs/data/src/index.ts"],
            "@coinage-app/interfaces": ["libs/interfaces/src/index.ts"],
            "@coinage-app/router": ["libs/router/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"],
    "angularCompilerOptions": {
        "strictTemplates": true,
        "fullTemplateTypeCheck": true
    }
}

{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/CVS": true,
        "**/.angular": true,
        "**/node_modules": true
    },
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/.angular": true

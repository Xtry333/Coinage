    "nxConsole.generateAiAgentRules": true,
    "stylelint.packageManager": "yarn",
    "scss.validate": false,
    "stylelint.snippet": ["css", "less", "postcss", "scss"],
    "stylelint.validate": ["css", "less", "postcss", "scss"]
}
